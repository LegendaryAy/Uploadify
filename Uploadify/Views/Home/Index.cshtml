@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 text-success">Uploadify</h1>
    <div class="row">
        <p class="text-success">@ViewBag.Message</p>
        <p class="text-danger">@ViewBag.Error</p>
        <div class="col-md-5">
            <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Submit">
                <div class="form-group">
                    <div class="col-md-10">
                        <label>First Name</label>
                        <input class="form-control" name="FirstName" type="text" />
                    </div>
                </div>
                <div class="col-md-10">
                    <label>Last Name</label>
                    <input class="form-control" name="LastName" type="text"  />
                </div>
                <div class="col-md-10">
                    <label>Email Address</label>
                    <input class="form-control" name="EmailAddress" type="email"/>
                </div>
                <div class="col-md-10">
                    <label>Phone Number</label>
                    <input class="form-control" name="PhoneNumber" type="text" />
                </div>
                <div class="col-md-10">
                    <label>Number of Documents to upload</label>
                    <input class="form-control" name="NumOfFiles" type="number" max="10"/>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <p>Upload file</p>
                        <div class="custom-file">
                            <input class="form-control custom-file-input" name="files" type="file" multiple />
                            <label class="custom-file-label">Choose files...</label>
                        </div>
                        
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input class="btn btn-success" type="submit" value="Upload" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
